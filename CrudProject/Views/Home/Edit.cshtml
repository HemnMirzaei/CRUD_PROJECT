@model CrudProject.DataAccessLayer.Entites.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class = "col-lg-4">
    <a asp-controller = "Home" asp-action = "Index" class = "btn btn-primary TopHeader">
        Go Back
    </a>
    <br />
    <br />
</div>

<form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="FirstName" class="form-control text" />
                <span asp-validation-for="FirstName" class="text-danger valid"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control text" />
                <span asp-validation-for="LastName" class="text-danger valid"></span>
            </div>
            <div class="form-group">
                <input asp-for="DateOfBirth" class="form-control text" />
                <span asp-validation-for="DateOfBirth" class="text-danger valid"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control text" />
                <span asp-validation-for="PhoneNumber" class="text-danger valid"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control text" />
                <span asp-validation-for="Email" class="text-danger valid"></span>
            </div>
            <div class="form-group">
                <input asp-for="BankAccountNumber" class="form-control text" />
                <span asp-validation-for="BankAccountNumber" class="text-danger valid"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

